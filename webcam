import cv2

def main():
    # Open the first connected webcam (0 by default)
    cap = cv2.VideoCapture(0)

    if not cap.isOpened():
        print("Cannot open camera")
        exit()
    
    print("Webcam opened successfully. Press 'Esc' to exit.")
    
    while True:
        # Capture frame-by-frame
        ret, frame = cap.read()
        
        # If frame is read correctly, ret is True
        if not ret:
            print("Can't receive frame (stream end?). Exiting ...")
            break

        # Display the resulting frame
        cv2.imshow('Webcam Feed', frame)

        # Break the loop if 'Esc' is pressed
        if cv2.waitKey(1) & 0xFF == 27:  # 27 is the Esc key
            print("Exiting...")
            break

    # When everything is done, release the capture and close all windows
    cap.release()
    cv2.destroyAllWindows()

if __name__ == "__main__":
    main()
